<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:wheel="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/black"
    >
    <uk.co.senab.photoview.PhotoView
        android:id="@+id/secret_image_pv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        />
    <cube.ware.ui.chat.videoplay.JCVideoPlayerStandard
        android:id="@+id/secret_video_pv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        />
    <ImageView
        android:id="@+id/secret_video_back_iv"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_margin="16dp"
        android:src="@drawable/ic_shut_down"
        android:scaleType="center"
        android:visibility="gone"/>

    <cube.ware.widget.SecretProgress
        android:id="@+id/secret_progress_time"
        android:layout_width="match_parent"
        android:layout_height="@dimen/view_space_4"
        android:visibility="gone"
        />

    <cube.ware.widget.CountdownChronometer
        android:id="@+id/secret_tip_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginRight="@dimen/view_space_10"
        android:layout_marginTop="@dimen/view_space_20"
        android:background="@drawable/ic_message_badge_bg_big"
        android:gravity="center"
        android:paddingLeft="@dimen/view_space_6"
        android:paddingRight="@dimen/view_space_6"
        android:textColor="@color/white"
        android:textSize="@dimen/text_size_16"
        android:visibility="gone"
        />
    <ProgressBar
        android:id="@+id/secret_progress_bar"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_gravity="center"
        />
</FrameLayout>
